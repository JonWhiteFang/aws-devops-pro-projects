resource "aws_dynamodb_table" "app" {
  provider     = aws.a
  name         = var.project
  billing_mode = "PAY_PER_REQUEST"
  hash_key     = "pk"
  range_key    = "sk"

  attribute {
    name = "pk"
    type = "S"
  }

  attribute {
    name = "sk"
    type = "S"
  }

  replica {
    region_name = var.region_b
  }

  tags = { Name = var.project }
}
